!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Ruslan Kenzhebekov"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    .fixed.sticky
      %nav.top-bar{:role => 'navigation', 'data-topbar' => true}
        %ul.title-area
          %li.name
            %h1
              %a{:href => "#"} Pending Some Site Name
          %li.toggle-topbar.menu-icon
            %a{:href => ""}
              %span
        %section.top-bar-section
          %ul.right
            -#%li.divider
            -#%li
            -#  %a{:href => "#service"}
            -#    = icon('gears')
            -#    Services
            %li.divider
            %li
              %a{:href => "#"}
                = icon('pencil')
                Blog
            %li.divider
            %li
              %a{:href => "http://github.com/rkenzhebekov", :target => '_blank'}
                = icon('github')
                GitHub
            %li.divider
            %li
              %a{:href => "#about"}
                = icon('info')
                About
            %li.divider
            %li
              %a{:href => "#contact"}
                = icon('send')
                Contact

    .row
      .large-12.columns
        = yield

    = javascript_include_tag "application"
