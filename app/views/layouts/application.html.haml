!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Ruslan Kenzhebekov"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    -#.fixed.sticky
    %nav.top-bar{:role => 'navigation', 'data-topbar' => true}
      %ul.title-area
        %li.name
          %h1
            %a{:href => "#"} My Site
        %li.toggle-topbar.menu-icon
          %a{:href => ""}
            %span
      %section.top-bar-section
        %ul.right
          %li.divider
          %li
            %a{:href => "#"} Projects
          %li.divider
          %li
            %a{:href => "#"} Blog
          %li.divider
          %li
            %a{:href => "http://github.com/rkenzhebekov"} GitHub
          %li.divider
          %li
            %a{:href => "#"} About me

    .row
      .large-12.columns
        = yield

    = javascript_include_tag "application"
